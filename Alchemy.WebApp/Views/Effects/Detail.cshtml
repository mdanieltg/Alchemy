@model Effect

@{
    ViewData["Title"] = "Efecto";
}

<h2>@Model.Name</h2>
<table class="table table-stripped">
    <tr>
        <th>Ingredientes</th>
        <td>
            <ul>
                @foreach (var ingredient in Model.Ingredients)
                {
                    <li>
                        <a asp-controller="Ingredients" asp-action="Detail" asp-route-ingredientId="@ingredient.Id">@ingredient.Name</a>
                    </li>
                }
            </ul>
        </td>
    </tr>
</table>

<button onclick="window.history.back();" class="btn btn-primary"><i class="bi bi-chevron-left"></i> Volver</button>
<a asp-action="Index" class="btn btn-secondary">Efectos</a>
