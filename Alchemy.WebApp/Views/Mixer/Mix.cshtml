@model ICollection<Alchemy.BusinessLogic.Mix>

@{
    ViewData["Title"] = "Mezclas";
}

<h2>Resultados</h2>

@if (Model.Count <= 0)
{
    <div class="text-danger">
        <p>No se encontraron mezclas.</p>
    </div>
}

@foreach (var mix in Model)
{
    <div class="mb-3">
        <p>El efecto <strong>@mix.Effect.Name.ToLower()</strong> se logra con los ingredientes:</p>
        <ul>
            @foreach (var ingredient in mix.Ingredients)
            {
                <li>
                    <a asp-controller="Ingredients"
                       asp-action="Detail"
                       asp-route-ingredientId="@ingredient.Id">
                        @ingredient.Name</a>, que se encuentra en @ingredient.Obtaining.
                </li>
            }
        </ul>
    </div>
}

<a href="#" onclick="window.history.back();" class="btn btn-primary"><i class="bi bi-chevron-left"></i> Volver</a>
